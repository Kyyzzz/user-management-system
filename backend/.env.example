DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=your_mysql_password
DATABASE_NAME=user_management

# JWT
# Generate a strong secret for production (example PowerShell):
#   [System.Convert]::ToBase64String((1..64 | ForEach-Object { Get-Random -Maximum 256 }))
JWT_SECRET=replace_me_with_a_strong_secret
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Server
PORT=3000
FRONTEND_URL=http://localhost:5173

# Optional (if set, refresh tokens use this instead of JWT_SECRET)
# JWT_REFRESH_SECRET=replace_me_with_a_strong_secret

